{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/react"
    },
    {
      "src": "api/**/*",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "GOOGLE_CLIENT_EMAIL": "your-google-client-email",
    "GOOGLE_PRIVATE_KEY": "your-google-private-key",
    "SPREADSHEET_ID": "your-spreadsheet-id"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
